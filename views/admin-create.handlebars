<div class="create-block">
    <div class="create-section">
        <h1 class="create-content-title">Create New Program</h1>
        <div class="create-content">
            <form class="program-form" method="" action="">
                <div class="create__program-name"> 
                    <label>Program Name:</label>
                    <input type="text" class="form-control" placeholder="Program Name" name="program-name">
                </div>
                <div class="create__program-days">
                    <label>Number of Days:</label>
                    <input type="text" class="form-control" placeholder="e.g. 1, 2, 3 ..." name="program-days">
                </div>
                <div class="program-description">
                    <label>Program Description:</label>
                    <textarea></textarea>
                </div>
                <button class="submit-button submit-program" type="submit">Create</button>
                <button class="submit-button submit-button-test" type="button">test</button>
            </form>
        </div>

        <div class="create-days-block">
            <form class="create-days-form">
                <h1>Day 1</h1>
                <div class="workout-info">
                    <label>Workout:</label>
                    <textarea></textarea>
                </div>
                <button class="submit-button submit-button-day" type="button">Next Day</button>
            </form>
        </div>

    </div>
    <img class="program-banner" src="/assets/images/banner-cement.jpg" alt="cement">
