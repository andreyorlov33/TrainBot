<!--admin menu-->
<div class="menu">
    <span class="close">&times;</span>
    <a href="/"><img class ="logo" src="/assets/images/trainbot_logo.png" alt="TrainBot"></a>
    <ul>
        <a href="/admin/newsfeed"><li>Client Newsfeed</li></a>
        <a href="/admin/clients"><li>Client List</li></a>
        <a href="/admin/programs"><li>Programs</li></a>
    </ul>
</div>

<!--admin header-->
<div class="site-header">
    <ul>
        <li class="hamburger"><i class="fa fa-bars" aria-hidden="true"></i></li>
        <li><img class ="logo" src="/assets/images/trainbot_logo.png" alt="TrainBot"></li>
        <li class="header-button"><button type="button">Logout</button></li>
    </ul>
</div>

<div class="list-block">
    <div class="list-section">
        <h1>Client List</h1>
        <div class="list-content">
        {{#each clients}}
                <ul>
                    <li>Name: {{name}}</li>
                    <li>Email: {{email}}</li>
                    <li>User Name: {{username}}</li>
                    <li>Program: {{Program.name}}</li>
                    <li class="client-bar">
                        <div class="progress-bar">
                            <span>5/60 Days</span>
                        </div>
                    </li>          
                </ul>
        {{/each}}
        </div>
    </div>
    <img class="program-banner" src="/assets/images/banner-cement.jpg" alt="cement">
</div>