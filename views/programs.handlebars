<!--admin menu-->
<div class="menu">
    <span class="close">&times;</span>
    <a href="/"><img class ="logo" src="/assets/images/trainbot_logo.png" alt="TrainBot"></a>
    <ul>
        <a href="/admin/newsfeed"><li>Client Newsfeed</li></a>
        <a href="/admin/client"><li>Client List</li></a>
        <a href="/admin/programs"><li>Programs</li></a>
    </ul>
</div>

<!--admin header-->
<div class="site-header">
    <ul>
        <li class="hamburger"><i class="fa fa-bars" aria-hidden="true"></i></li>
        <li><img class ="logo" src="/assets/images/trainbot_logo.png" alt="TrainBot"></li>
    </ul>
</div>

<!--programs section-->
{{#each programs}}
    <div>
        <h1>Program Name: {{this.name}}</h1>
        <h3>Programmed Days: {{this.days}}</h3>
        <p>{{this.description}}</p> 
        <form action='/program/{{this.id}}' method='GET'>
            <button type="submit" name="{{this.id}}">Take a look at the program?</button>
        </form>
    </div>
    <br>
{{/each}} 